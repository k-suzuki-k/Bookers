<body class="index-box">

	<div class="table">
	<h1>Books</h1>

	<%# 一覧  %>
	<table class="table_box">
		<thead>
			<tr class="table_title">
				<th>Title</th>
				<th>Body</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody class="table_body">
			<% @books.each do |book| %>
			<tr>
				<th><%= book.title %></th>
				<th><%= book.body %></th>
				<th><%= link_to 'Show', book_path(book) %></th>
				<th><%= link_to 'Edit', edit_book_path(book) %></th>
				<th><%= link_to 'Destroy', book_path(book), method: :delete %></th>
			</tr>
			<% end %>
		</tbody>
	</table>
	</div>

	<%# 投稿画面 %>
	<div class="create-box">
	<h2>New book</h2>

	<%= form_for(@book) do |f| %>

		<%# エラー出力 %>
		<%= render 'layouts/error_messages', model: f.object %>
		<%# エラー出力 %>

		<label>Title</label>
		<%= f.text_field :title, class: "create-title" %>

		<label>Body</label>
		<%= f.text_area :body, class: "create-body" %>

		<%= f.submit 'Create Book', class: "create-btn" %>

	<% end %>

	</div>
</body>