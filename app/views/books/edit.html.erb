<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	
	<%# エラー出力 %>
	<%= render 'layouts/error_messages', model: f.object %>

	<h2>Title</h2>
	<%= f.text_field :title %>
	<h2>Body</h2>
	<%= f.text_field :body %>
	<%= f.submit 'Update Book'%>

	<%= link_to 'Show', book_path %>
	<%= link_to 'Back', books_path %>

<% end %>

